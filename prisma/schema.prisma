// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String    @id
  name      String
  password  String
  email     String
  number    String
  createdAt String
  contacts  Contact[]

  @@map("clients")
}

model Contact {
  id        String @id
  name      String
  password  String
  email     String
  number    String
  createdAt String
  client    Client @relation(fields: [clientId], references: [id])
  clientId  String

  @@map("contacts")
}
